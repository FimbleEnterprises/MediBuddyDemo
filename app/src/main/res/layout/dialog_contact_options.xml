<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#00000000"
	android:orientation="vertical">

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/round_container_black_border"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:paddingLeft="1dp"
		android:paddingTop="1dp"
		android:paddingRight="1dp"
		android:visibility="visible">

		<TextView
			android:id="@+id/TextView_TripOptionsMainText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:fontFamily="casual"
			android:gravity="center_horizontal"
			android:text="What would you like to do?"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:visibility="gone" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:paddingBottom="1dp">

		<TableLayout
			android:id="@+id/TableLayout_StartStop"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_marginTop="1dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp">

			<TableRow
				android:id="@+id/tableRow2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<Button
						android:id="@+id/btn_add_to_contacts"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_below="@+id/view_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/abook"
						android:drawablePadding="2dp"
						android:fontFamily="casual"
						android:paddingTop="4dp"
						android:text="Add to contacts..."
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRowShare"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<Button
						android:id="@+id/btn_share_contact"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/ic_menu_share"
						android:drawablePadding="2dp"
						android:fontFamily="casual"
						android:paddingTop="4dp"
						android:text="Share..."
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRow_businessPhone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/btnCallBusinessPhone"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@android:drawable/ic_menu_call"
						android:drawablePadding="1dp"
						android:fontFamily="casual"
						android:paddingTop="5dp"
						android:text="@string/call_contact"
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRow_address1Phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/btnCallAddress1"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@android:drawable/ic_menu_call"
						android:drawablePadding="1dp"
						android:fontFamily="casual"
						android:paddingTop="5dp"
						android:text="@string/call_contact"
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRowSms1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<Button
						android:id="@+id/btn_sms_contact1"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/sms_32"
						android:drawablePadding="2dp"
						android:fontFamily="casual"
						android:paddingTop="4dp"
						android:text="Text "
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRowSms2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<Button
						android:id="@+id/btn_sms_contact2"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/sms_32"
						android:drawablePadding="2dp"
						android:fontFamily="casual"
						android:paddingTop="4dp"
						android:text="Text "
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRow_email_addy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<Button
						android:id="@+id/btnEmailContact"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@android:drawable/sym_action_email"
						android:drawablePadding="2dp"
						android:fontFamily="casual"
						android:paddingTop="4dp"
						android:text="@string/send_email"
						android:textColor="#000000" />

				</FrameLayout>

			</TableRow>

			<TableRow
				android:id="@+id/tableRow3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/view_contact"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/about"
						android:drawablePadding="0dp"
						android:fontFamily="casual"
						android:includeFontPadding="true"
						android:text="View"
						android:textColor="#000000" />

				</FrameLayout>

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:visibility="gone">

					<Button
						android:id="@+id/delete_trip_from_server"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/unsubmit_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/unsubmit_icon_38x38"
						android:drawablePadding="1dp"
						android:paddingTop="5dp"
						android:text="Unsubmit"
						android:textColor="#000000" />
				</FrameLayout>
			</TableRow>

			<TableRow
				android:id="@+id/tableRowDeleteButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/delete_contact"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/delete_icon"
						android:drawablePadding="0dp"
						android:fontFamily="casual"
						android:includeFontPadding="true"
						android:text="Delete..."
						android:textColor="#000000" />

				</FrameLayout>

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:visibility="gone">

					<Button
						android:id="@+id/delete_contact_from_server"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/unsubmit_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawableTop="@drawable/unsubmit_icon_38x38"
						android:drawablePadding="1dp"
						android:paddingTop="5dp"
						android:text="Unsubmit"
						android:textColor="#000000" />
				</FrameLayout>
			</TableRow>

			<TableRow
				android:id="@+id/tableRow4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:visibility="gone">

					<!--<Button
						android:id="@+id/delete_trip"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/submit_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawablePadding="0dp"
						android:drawableTop="@drawable/trash_icon_black_48x48"
						android:text="Delete"
						android:textColor="#000000" />-->

				</FrameLayout>
			</TableRow>

		</TableLayout>
	</RelativeLayout>
</LinearLayout>

</LinearLayout>