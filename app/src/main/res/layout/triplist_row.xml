<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/btn_glass_gray_orange_border">

    <TextView
        android:id="@+id/txtIsAutoStopped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_FullTripRowSubtext"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@id/checkBox_selectTrip"
        android:background="@drawable/btn_glass_gray_black_border_toggle_orange_on"
        android:fontFamily="casual"
        android:padding="2dp"
        android:text="AUTO-STOPPED"
        android:textColor="#EB4A17"
        android:textSize="11sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_FullTripRowLeftIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:scaleType="center"
        android:src="@drawable/av_checkmark"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_FullTripRowSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_FullTripRowMainText"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/imageView_FullTripRowLeftIcon"
        android:focusable="false"
        android:fontFamily="casual"
        android:text="Travelled 4.6 miles"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#354856"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_FullTripRowMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_FullTripRowLeftIcon"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/imageView_FullTripRowLeftIcon"
        android:focusable="false"
        android:fontFamily="casual"
        android:text="Trip in progress..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#354856"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkBox_selectTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:buttonTint="#FF6600"
        android:buttonTintMode="src_in"
        android:focusable="false"
        android:fontFamily="casual"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtIsEditedOrManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_FullTripRowMainText"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@id/checkBox_selectTrip"
        android:background="@drawable/btn_glass_gray_black_border_toggle_orange_on"
        android:fontFamily="casual"
        android:padding="2dp"
        android:text="MANUAL"
        android:textColor="#EB4A17"
        android:textSize="11sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_has_associations"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:visibility="visible"
        app:srcCompat="@drawable/exclamation_blue_64"
        tools:visibility="invisible" />

</RelativeLayout>