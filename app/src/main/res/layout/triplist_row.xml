<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/btn_glass_gray_orange_border">

    <TextView
        android:id="@+id/txtEdited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_FullTripRowSubtext"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/checkBox_selectTrip"
        android:fontFamily="casual"
        android:text="Edited"
        android:textColor="#EB4A17"
        android:textSize="14sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_FullTripRowLeftIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:scaleType="center"
        android:src="@drawable/av_checkmark" />

    <TextView
        android:id="@+id/textView_FullTripRowSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_FullTripRowMainText"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/imageView_FullTripRowLeftIcon"
        android:focusable="false"
        android:fontFamily="casual"
        android:text="Travelled 4.6 miles"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#354856"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_FullTripRowMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_FullTripRowSubtext"
        android:layout_alignTop="@+id/imageView_FullTripRowLeftIcon"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:fontFamily="casual"
        android:text="Trip in progress..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#354856"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkBox_selectTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:buttonTint="#FF6600"
        android:buttonTintMode="src_in"
        android:focusable="false"
        android:fontFamily="casual"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_TripId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_FullTripRowLeftIcon"
        android:layout_toRightOf="@+id/textView_FullTripRowMainText"
        android:focusable="false"
        android:fontFamily="casual"
        android:text="354"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_FullTripRowMainText"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/checkBox_selectTrip"
        android:fontFamily="casual"
        android:text="Manual"
        android:textColor="#EB4A17"
        android:textSize="14sp"
        android:visibility="visible" />

</RelativeLayout>