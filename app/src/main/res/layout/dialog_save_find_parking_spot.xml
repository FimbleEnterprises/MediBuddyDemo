<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	android:background="#000000"
	android:orientation="vertical"
	android:paddingLeft="1dp"
	android:paddingTop="1dp"
	android:paddingRight="1dp"
	android:paddingBottom="1dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:paddingLeft="1dp"
		android:paddingTop="1dp"
		android:paddingRight="1dp"
		android:visibility="visible">

		<TextView
			android:id="@+id/TextView_TripOptionsMainText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:gravity="center_horizontal"
			android:text="@string/save_find_parking_spot_dialog_title"
			android:textAppearance="?android:attr/textAppearanceLarge" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:paddingBottom="1dp">

		<TableLayout
			android:id="@+id/TableLayout_StartStop"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_marginTop="1dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp">

			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent" />

				</FrameLayout>

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<!-- put views here -->

				</FrameLayout>
			</TableRow>


			<TableRow
				android:id="@+id/tableRow1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/btn_call"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_below="@+id/unsubmit_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawablePadding="1dp"
						android:paddingTop="5dp"
						android:text="@string/save_parking_spot_button"
						android:textColor="#000000" />

				</FrameLayout>

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1">

					<Button
						android:id="@+id/btnDelete"
						style="@style/ButtonTextWhiteShadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_below="@+id/submit_trip"
						android:layout_margin="2dp"
						android:background="@drawable/btn_glass_gray_black_border"
						android:drawablePadding="0dp"
						android:text="@string/find_parking_spot_button"
						android:textColor="#000000" />

				</FrameLayout>
			</TableRow>

			<TableRow
				android:id="@+id/tableRow4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:visibility="visible">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent" />

				</FrameLayout>
			</TableRow>

		</TableLayout>
	</RelativeLayout>
</LinearLayout>